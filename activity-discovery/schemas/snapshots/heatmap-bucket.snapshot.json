{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HeatMapBucket",
  "description": "Aggregated activity count for a single day",
  "type": "object",
  "required": ["date", "count"],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date in YYYY-MM-DD format (UTC)"
    },
    "count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total activity count for the day"
    },
    "breakdown": {
      "type": "object",
      "description": "Optional per-provider breakdown",
      "properties": {
        "github": {
          "type": "integer",
          "minimum": 0
        },
        "gitlab": {
          "type": "integer",
          "minimum": 0
        },
        "azure-devops": {
          "type": "integer",
          "minimum": 0
        },
        "google-calendar": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
